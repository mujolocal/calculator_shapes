<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">
<androidx.appcompat.widget.AppCompatTextView
    android:text="@string/equation_record"
    style="@style/disply_box"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:text="@string/solution"
        style="@style/disply_box"/>

    <LinearLayout
        style="@style/buttons_layout">
        <androidx.appcompat.widget.AppCompatTextView
            android:text="C"
            android:layout_weight="1"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="def"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="%"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="/"
            style="@style/button"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttons_layout">
        <androidx.appcompat.widget.AppCompatTextView
            android:text="7"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="8"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="9"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="X"
            style="@style/button"/>

    </LinearLayout>
    <LinearLayout
        style="@style/buttons_layout">
        <androidx.appcompat.widget.AppCompatTextView
            android:text="4"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="5"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="6"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="+"
            style="@style/button"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttons_layout">
        <androidx.appcompat.widget.AppCompatTextView
            android:text="1"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="2"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="3"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="-"
            style="@style/button"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttons_layout">

        <androidx.appcompat.widget.AppCompatTextView
            android:text="0"
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="."
            style="@style/button"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="="
            style="@style/button"/>

    </LinearLayout>


</LinearLayout>